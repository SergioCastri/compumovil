<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PlatosActivity"
    tools:layout_editor_absoluteY="48dp"
    tools:showIn="@layout/app_bar_platos">

  <ImageView
      android:id="@+id/imagenPlato"
      android:layout_width="139dp"
      android:layout_height="127dp"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginBottom="8dp"
      android:src="@drawable/ic_menu_gallery"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/seleccionarImagen"
      app:layout_constraintHorizontal_bias="0.222"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/seleccionarImagen"
      android:layout_width="167dp"
      android:layout_height="40dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="432dp"
      android:layout_marginRight="432dp"
      android:layout_marginBottom="8dp"
      android:background="@color/colorAccent"
      android:onClick="subirImagen"
      android:text="@string/seleccionarImagen"
      android:textColor="#ffff"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.301" />

  <TextView
      android:id="@+id/labelGestion"
      android:layout_width="158dp"
      android:layout_height="28dp"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginBottom="8dp"
      android:text="@string/gestionarImagen"
      android:textSize="18dp"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@+id/seleccionarImagen"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.074"
      app:layout_constraintStart_toEndOf="@+id/imagenPlato"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0" />

  <TextView
      android:id="@+id/labelRegistrar"
      android:layout_width="168dp"
      android:layout_height="35dp"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginBottom="8dp"
      android:text="@string/registrarPlato"
      android:textSize="24sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.465"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />

  <EditText
      android:id="@+id/nombrePlato"
      android:layout_width="344dp"
      android:layout_height="47dp"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginBottom="8dp"
      android:ems="10"
      android:hint="@string/nombreDelPlato"
      android:inputType="textNoSuggestions|textCapSentences"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintVertical_bias="0.535" />

  <CheckBox
      android:id="@+id/checkBoxManana"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:text="@string/manana"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.734" />

  <CheckBox
      android:id="@+id/checkBoxNoche"
      android:layout_width="78dp"
      android:layout_height="34dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="432dp"
      android:layout_marginRight="432dp"
      android:layout_marginBottom="8dp"
      android:text="@string/noche"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.735" />

  <CheckBox
      android:id="@+id/checkBoxTarde"
      android:layout_width="72dp"
      android:layout_height="33dp"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginBottom="8dp"
      android:text="@string/tarde"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/checkBoxNoche"
      app:layout_constraintHorizontal_bias="0.465"
      app:layout_constraintStart_toEndOf="@+id/checkBoxManana"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.736" />

  <Button
      android:id="@+id/tiempoPreparacion"
      android:layout_width="94dp"
      android:layout_height="39dp"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:text="@string/tiempo"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.951" />

  <RadioGroup
      android:id="@+id/radioGrupo"
      android:layout_width="349dp"
      android:layout_height="52dp"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginBottom="8dp"
      android:orientation="horizontal"
      android:weightSum="1"
      app:layout_constraintBottom_toBottomOf="@+id/informacion"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.136">

    <RadioButton
        android:id="@+id/radioButtonPlatoFuerte"
        android:layout_width="160dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="8dp"
        android:text="@string/platoFuerte"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxTarde"
        app:layout_constraintVertical_bias="0.035" />

    <RadioButton
        android:id="@+id/radioButtonEntrada"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/entrada"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/radioButtonPlatoFuerte"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxTarde"
        app:layout_constraintVertical_bias="0.226" />
  </RadioGroup>

  <EditText
      android:id="@+id/tiempo"
      android:layout_width="232dp"
      android:layout_height="42dp"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginBottom="8dp"
      android:ems="10"
      android:enabled="false"
      android:hint="@string/tiempoDePreparacion"
      android:inputType="textNoSuggestions|textCapSentences"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.025"
      app:layout_constraintStart_toEndOf="@+id/tiempoPreparacion"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.965" />

  <EditText
      android:id="@+id/precio"
      android:layout_width="108dp"
      android:layout_height="40dp"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginBottom="8dp"
      android:ems="10"
      android:hint="@string/precio"
      android:inputType="textNoSuggestions|phone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.635"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.301" />

  <EditText
      android:id="@+id/ingredientes"
      android:layout_width="221dp"
      android:layout_height="40dp"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginBottom="8dp"
      android:ems="10"
      android:hint="@string/ingredientes"
      android:inputType="textNoSuggestions|textCapSentences"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.301" />

  <Button
      android:id="@+id/registrar"
      android:layout_width="112dp"
      android:layout_height="37dp"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginBottom="8dp"
      android:background="@color/colorAccent"
      android:onClick="registrar"
      android:text="@string/registrar"
      android:textColor="#ffff"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.803"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/labelRegistrar"
      app:layout_constraintVertical_bias="0.454" />

  <TextView
      android:id="@+id/informacion"
      android:layout_width="350dp"
      android:layout_height="137dp"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginBottom="8dp"
      android:text=""
      android:textSize="14sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.981"
      app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
