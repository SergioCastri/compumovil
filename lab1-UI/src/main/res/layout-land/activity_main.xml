<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">


  <ImageView
      android:id="@+id/imagenCentral"
      android:layout_width="733dp"
      android:layout_height="225dp"
      android:layout_marginStart="50dp"
      android:layout_marginLeft="50dp"
      android:layout_marginEnd="50dp"
      android:layout_marginRight="50dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.504"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/logo" />

  <Button
      android:id="@+id/verPlatos"
      android:layout_width="213dp"
      android:layout_height="45dp"
      android:layout_marginStart="132dp"
      android:layout_marginLeft="132dp"

      android:layout_marginTop="8dp"
      android:layout_marginBottom="8dp"
      android:background="@color/colorAccent"
      android:onClick="verPlatos"
      android:text="@string/registrarPlato"
      android:textColor="#ffff"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imagenCentral"
      app:layout_constraintVertical_bias="0.336" />

  <Button
      android:id="@+id/verBebidas"
      android:layout_width="211dp"
      android:layout_height="47dp"
      android:layout_marginStart="8dp"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginBottom="8dp"
      android:background="@color/colorAccent"
      android:onClick="verBebidas"
      android:text="@string/registraBebida"
      android:textColor="#ffff"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.356"
      app:layout_constraintStart_toEndOf="@+id/verPlatos"
      app:layout_constraintTop_toBottomOf="@+id/imagenCentral"
      app:layout_constraintVertical_bias="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>
